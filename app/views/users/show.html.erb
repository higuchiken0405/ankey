<div class="wrapper wrapper-user-show">
  <div class="container container-background">
    <div class="container-user-show">

      <div class="row">

        <div class="col-md-4">
          <div class="user-show-name">
            <%= @user.name %>
            <%= link_to "ユーザー情報編集", edit_user_path(id: params[:id]) if @user == current_user %>
          </div>
        </div>

        <div class="col-md-8">
          <% if @user == current_user %>
            <div class="btn btn-block btn-info work-new-form-show-btn">問題集作成</div>
            <%= render 'workbooks/workbook_form' %>
          <% end %>
            <div class="row">
              <% @workbooks.each do |workbook| %>
                <% if workbook.user_id == @user.id %>
                  <div class="user-show-workbook-title col-md-4">
                    <%= link_to "#{workbook.title}", workbook_path(workbook.id) %>
                  </div>
                  <div class="user-show-workbook-overview col-md-5">
                    <%= workbook.overview %>
                  </div>
                  <div class="col-md-3">
                    <%= link_to "スライド", "/workbooks/#{workbook.id}/slider", class: 'btn btn-info' %>
                  </div>
                <% end %>
              <% end %>
            </div>
        </div>

      </div>

    </div>
  </div>
</div>


<script>
$(function(){
  // ”問題集を作成”ボタンを押すと、モーダルフォーム表示
  $(document).on('click', '.work-new-form-show-btn', function(){
    $('#workbook-new-form-modal').fadeIn();
  });
  $(document).on('click', '.close-modal', function(){
    $('#workbook-new-form-modal').fadeOut();
  });
});
</script>
