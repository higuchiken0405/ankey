<div class="container text-center" id="pages-singup-form-modal">
  <div class="container-pages-signup">
    <div class="modal-form-pages-signup">
      <div class="text-right"><i class="close-modal">Ã—</i></div>
      <h1>Sign Up</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :"name" %>
            <%= f.text_field :name, class: "signup-pages-form" %>
          </div>
          <div class="form-group">
            <%= f.label :"email" %>
            <%= f.email_field :email, class: "signup-pages-form" %>
          </div>
          <div class="form-group">
            <%= f.label :"password" %>
            <%= f.password_field :password, class: "signup-pages-form" %>
          </div>
          <div class="form-group">
            <%= f.label :"password-confirmation" %>
            <%= f.password_field :password, class: "signup-pages-form" %>
          </div>
          <%= f.submit "Sign Up", class: "btn signup-btn" %>
        <% end %>
    </div>
  </div>
</div>
