<div class="container-workbook-show">

  <div class="row">
    <div class="data-name border-right col-md-5">問題</div>
    <div class="data-name border-right data-2 col-md-3">答え</div>
    <div class="data-name border-right data-3 col-md-2">作成者ID</div>
    <div class="data-name col-md-2">問題集ID</div>
  </div>

    <% @workbook.question_answers.each do |question_answer| %>
      <div class="row row-workbook-show">
        <div class="list-workbook-show col-md-5">
          <%= question_answer.question %>
        </div>
        <div class="list-workbook-show col-md-3">
          <%= question_answer.answer %>
        </div>
        <div class="list-workbook-show col-md-2">
          <%= question_answer.user_id %>
        </div>
        <div class="list-workbook-show col-md-2">
          <%= question_answer.workbook_id %>
        </div>
      </div>
    <% end %>
</div>
