
<div class="container-workbook-new-form text-center" id="workbook-new-form-modal">
  <div class="container-workbook-new">
    <div class="modal-form">
      <div class="text-right"><i class="close-modal">×</i></div>
      <h1>問題集作成</h1>
      <%= form_for @workbook, url: workbooks_path(@workbook) do |f| %>
      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :"題名" %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :"概要" %>
          <%= f.text_area :overview %>
        </div>
      </div>
          <%= f.submit "登録", class:'btn btn-info' %>
      <% end %>
    </div>
  </div>
</div>
