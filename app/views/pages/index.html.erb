
<div class="wrapper wrapper-index">
  <div class="container text-center">
    <% if logged_in? %>
    <div class="time-back">
      <p><span id="time"></span></p>
      <p><span id="year"></span></p>
    </div>
    <% else %>
    <div class="row row-login-signup">
      <h1>Welcome To Ankey</h1>
      <p>This aplication is the most helpfil assistant</p>
      <div class="col-md-offset-3 col-md-3">
        <%= link_to "ログイン", login_path, class: "btn btn-info btn-index" %>
      </div>
      <div class="col-md-3">
        <%= link_to "新規登録", signup_path, class: "btn btn-info btn-index" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<script>
function set2fig(num) {
   // 桁数が1桁だったら先頭に0を加えて2桁に調整する
   var ret;
   if( num < 10 ) { ret = "0" + num; }
   else { ret = num; }
   return ret;
}
function nowTime() {
   var nowTime = new Date();
   var nowHour = set2fig( nowTime.getHours() );
   var nowMin  = set2fig( nowTime.getMinutes() );
   var nowSec  = set2fig( nowTime.getSeconds() );
   var msg = nowHour + ":" + nowMin + ":" + nowSec;
   document.getElementById("time").innerHTML = msg;


   var nowYear = nowTime.getFullYear();
   var nowMonth = nowTime.getMonth();
   var mNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
   var monthEn = mNames[nowMonth];
   var nowDay = nowTime.getDate();
   var nowWeek = nowTime.getDay();
   var wNames = ['Sun.', 'Mon.', 'Tues.','Wed', 'Thurs.', 'Fri.', 'Sat.'];
   var weekEn = wNames[nowWeek];
   var nowDate = weekEn + " " + monthEn + " " + nowDay + " " + nowYear;
   document.getElementById("year").innerHTML = nowDate;
}
setInterval('nowTime()',1000);

</script>
